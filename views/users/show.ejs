	<title>Project Two</title>
</head>
<body>

<header class= "show_header">
	<nav>
	<ul>
		<li><img src="<%= user.img%>"></li>
		<li><h1> <%= user.username %>'s Profile </h1></li>
		<!-- Logout/Redirect to Home page -->
		<li><a href="/users/logout"><p>Logout</p></a></li>
		<!-- Build an edit function and route -->
		<li> <a class="edit_button" href="/users/<%= user %>/edit">   Edit Your Profile <%= user.name %> </a></li>
	</ul>
  </nav>
</header>

<main>

<br>	

<div class= "new_info">
	<h4>This is the new info:</h4>
    <ul>
    	<li><h4>Instruments: <%=user.instruments%> </h4></li>
    	<li><h4>SoundCloud: <%=user.soundcloud%></h4> </li>
    	<li><h4>Facebook: <%=user.facebook%> </h4></li>
      <li><h4>Twitter: <%=user.twitter%> </h4></li>
      <li><h4>Bio: <%=user.bio%> </h4></li>
    </ul>
</div>
<br>
 	<hr>

<!-- list from SoundCloud of music genres -->
<!-- <ul id="results"> -->

<!-- Pops open soundcloud login window. -->
	<a href="#" class="connect">Connect with SoundCloud</a>
  <p>Hello, your name is <span id="username"></span></p>

<!-- Sound cloud player widget -->
 <div class="player" id="player"> </div> 

<!-- Comments Section -->
<div class= "comments_section">
	<h4>Leave a Comment</h4>
	<form action="/users/<%=user.id%>/comments" method="POST">
		<input type="text" name="name" placeholder="name"><br><br>
		<input type="text" name="profile" placeholder="Profile URL"><br><br>
		<textarea class="comments" name="comments" rows="15" cols="50" placeholder="Comments"></textarea><br/>
	<input type="hidden" name="profileId" value="<%= user.id %>">
		<button id= "comments_submit_button" type="submit">Submit</button><br>
	</form>
</div>
<br><br>
<div class= "comments_results">
	<!-- comments from above form go here -->

	<h4>These are the comments:</h4>
    <ul>
    	<li><h4>Name:</h4> <%=user.name%> </li>
    	<li><h4>Profile:</h4> <%=user.profile%> </li>
    	<li><h4>Comments</h4> <%=user.comments%> </li>
    </ul>

</div>

<br><br>
  <h4>Here is a list of other members:</h4>
 <div clas="members_list">
            <% for (var i=0; i < user.members.length; i++) { %>
              <div class="members">
                <p><%= user.members[i].name %></p>
              </div>
            <% } %>
          </div>

          <% if (usertrue) { %> 
            <form action="/users/<%= user.id %>" method="POST">
            
            
            </form>
          <% } %>
      </div>


</div>




<!-- Need a list of users -->

  <!-- Delete Button; Needs to be distinctly seperate-->
  <br><br><br><br><br><br><br>
	<form action="/users/<%=user.id%>/index" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <button id="delete-button">Delete My Account</button>
	</form>
</main>
<br><br>
<% include ../partials/footer %>
</body>
</html>

